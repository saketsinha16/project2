<div class="col-sm-4" style="border:1px solid #eee; box-shadow:2px 2px 2px 2px #eee; border-radius:10px; ">





<h2>Forgot your password?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
   <p> <%= f.input :email, required: true, autofocus: true %></p>
   <br />
  </div>

  <div class="form-actions">
  <br />
    <p><%= f.button :submit, "Send me reset password instructions" , class: 'btn btn-success' %></p>
 
<% end %>


 </div>

