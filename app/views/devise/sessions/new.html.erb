<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
   <p> <%= f.input :email, required: false, autofocus: true , class: 'abc' %><br /><br /></p>
    <p><%= f.input :password, required: false %><br /></p>
    <p><%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %></p>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" , class: 'btn btn-success ' %>
 
<% end %>

